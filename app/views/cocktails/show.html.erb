<div class='col-6'>
  <h1 class='mt-5'><%= @cocktail.name %></h1>
  <ul>
    <strong>Dose:</strong>
    <% @cocktail.doses.each do | dose | %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to 'Remove', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} %>
    <% end %>
  </ul>
</div>


<div class='col-12'>
<%= render 'doses/new', dose: @dose %>
<br>
<%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
</div>