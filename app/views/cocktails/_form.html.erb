<div class="container">
    <div class='mt-5'>
        <div class="row justify-content-left">
            <%= simple_form_for(@cocktail) do |t| %>

            <div class='col-12 '>
                <%= t.input :name %>
            </div>

            <div class='col-12 '>
                <%= t.input :photo, as: :file %>
            </div>

            <div class="form-actions">
                <%= t.submit class: 'btn-second' %>
            </div>
            <% end %>
    </div>
</div>